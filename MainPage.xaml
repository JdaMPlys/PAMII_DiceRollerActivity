<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceRollerActivity.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="25">
            <HorizontalStackLayout
                Spacing="15">
                <Entry
                    x:Name="ValueDice"
                    Placeholder="Digite aqui o valor da quantidade de dados"/>
            </HorizontalStackLayout>
            <Button
                x:Name="SortDice"
                Text="ROLAR O DADO"
                BackgroundColor="Gray"
                Clicked="BtnSortear"/>
            <Label
                x:Name="sorteadoDado"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
